pipeline {
    agent any
    tools {nodejs 'nodejs'}

    stages {
            stage('Checkout'){
                steps{
                    git credentialsId: 'github', url: 'https://github.com/deepteshb/tourofheroes.git'
                    }
            }
            stage('Build'){
                steps{
                   sh 'npm install'
                   sh 'npm build -dev'
                }
            }
            stage('Static Code Analysis'){
                steps{
                    sh 'npm run sonar'
                }

            }
        }
    }